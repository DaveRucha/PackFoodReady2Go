@model PackFoodReady2Go.Core.ShippingAddressViewModel

@{
	var cartStatus = ViewData["Empty Cart"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Amatic+SC:400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="~/css/open-iconic-bootstrap.min.css">
	<link rel="stylesheet" href="~/css/animate.css">

	<link rel="stylesheet" href="~/css/owl.carousel.min.css">
	<link rel="stylesheet" href="~/css/owl.theme.default.min.css">
	<link rel="stylesheet" href="~/css/magnific-popup.css">

	<link rel="stylesheet" href="~/css/aos.css">

	<link rel="stylesheet" href="~/css/ionicons.min.css">

	<link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
	<link rel="stylesheet" href="~/css/jquery.timepicker.css">


	<link rel="stylesheet" href="~/css/flaticon.css">
	<link rel="stylesheet" href="~/css/icomoon.css">
	<link rel="stylesheet" href="~/css/style.css">

</head>
<body class="goto-here">

	<div class="hero-wrap hero-bread" style="background-image: url('@Url.Content("~/img/" + @ViewData["BgImage"])');">
		<div class="container">
			<div class="row no-gutters slider-text align-items-center justify-content-center">
				<div class="col-md-9 ftco-animate text-center">
					<p class="breadcrumbs"><span class="mr-2"><a asp-action="Index" asp-controller="Customer" style="font-size:15px;color:white;font-weight:700; text-shadow: 0 0 3px #0d491b, 0 0 5px #000000;">Home</a></span> / <span style="font-size:15px;color:white;font-weight:700; text-shadow: 0 0 3px #0d491b, 0 0 5px #000000;">Checkout</span></p>
					<h1 class="mb-0 bread" style="color:white;font-weight:700; text-shadow: 0 0 3px #0d491b, 0 0 5px #000000;font-size:28px">Checkout</h1>
				</div>
			</div>
		</div>
	</div>

	
	@if (string.IsNullOrEmpty(cartStatus))
	{
		<section class="ftco-section">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-xl-7 ftco-animate">
						<form asp-action="Checkout" asp-controller="Product" method="post" class="billing-form" id="checkoutForm" data-toggle="validator" role="form">
							<h3 class="mb-4 billing-heading">Billing Details</h3>
							<div class="row align-items-end" style="margin-top:30px;">
								<div class="col-md-6">
									<div class="form-group">
										<label asp-for="FirstName">First Name</label>
										<input asp-for="FirstName" type="text" name="FirstName" class="form-control" placeholder="Firt Name">
										<span asp-validation-for="FirstName" class="text-danger"></span>
									</div>

								</div>
								<div class="col-md-6">
									<div class="form-group">
										<label asp-for="LastName">Last Name</label>
										<input asp-for="LastName" class="form-control" placeholder="Last Name" type="text" name="LastName" />
										<span asp-validation-for="LastName" class="text-danger"></span>
									</div>
								</div>
								<div class="w-100"></div>
								<div class="col-md-6">
									<div class="form-group">
										<label asp-for="Country">Country</label>
										<input asp-for="Country" class="form-control" placeholder="Country" name="Country" type="text" />
										<span asp-validation-for="Country" class="text-danger"></span>
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<label asp-for="State">State</label>
										<input asp-for="State" class="form-control" placeholder="State" name="State" type="text" />
										<span asp-validation-for="State" class="text-danger"></span>
									</div>
								</div>
								<div class="w-100"></div>
								<div class="col-md-12">
									<div class="form-group">
										<label asp-for="Address">Street Address</label>
										<input asp-for="Address" class="form-control" placeholder="Address" name="Address" type="text" />
										<span asp-validation-for="Address" class="text-danger"></span>
									</div>

								</div>
								<div class="w-100"></div>
								<div class="col-md-6">
									<div class="form-group">
										<label asp-for="City">Town / City</label>
										<input asp-for="City" class="form-control" placeholder="Town / City" name="City" type="text" />
										<span asp-validation-for="City" class="text-danger"></span>
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<label asp-for="PostCode">Postcode / ZIP *</label>
										<input asp-for="PostCode" class="form-control" placeholder="Postcode / ZIP " name="PostCode" type="text" />
										<span asp-validation-for="PostCode" class="text-danger"></span>
									</div>

								</div>
								<div class="w-100"></div>
								<div class="col-md-6">
									<div class="form-group">
										<label asp-for="Phone">Phone</label>
										<input asp-for="Phone" class="form-control" placeholder="Phone" name="Phone" type="text" />
										<span asp-validation-for="Phone" class="text-danger"></span>
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<label asp-for="EmailAddress">Email Address</label>
										<input asp-for="EmailAddress" class="form-control" placeholder="Email Address" name="EmailAddress" type="text" />
										<span asp-validation-for="EmailAddress" class="text-danger"></span>
									</div>
								</div>

							</div>
							<div class="cart-detail cart-total p-3 p-md-4" style="margin-top:30px;">
								<h3 class="billing-heading mb-4" style="font-size:22px"><b>Your Order</b></h3>
								<hr style="border-top: 1px solid black;">
								<table class="w-100">
									<thead>
										<tr >
											<td class="billing-heading  mb-4 " style="color:black;font-size:19px">PRODUCT</td>
											<td class="billing-heading  mb-4" style="color:black;font-size:19px">SUBTOTAL</td>
										</tr>
										
									</thead>
									
									<tbody>
										
										@foreach (var item in Model.Cart)
										{
											<tr>
												<td>
													@item.Products.ProductName - @item.Products.UnitPrice * @item.Quantity
												</td>
												<td>
													<span style="color:black;">@(item.Products.UnitPrice * item.Quantity)</span>
													
												</td>
											</tr>
										}
									</tbody>
									
								</table>
								

								<hr>
								<p class="d-flex" style="color:black;">
									<span>Subtotal</span>
									<span>@ViewData["subtotal"]</span>
									<input type="hidden" id="_subtotal" name="_subtotal" value="@ViewData["subtotal"]" />
								</p> 
								<hr>
								<p class="d-flex" style="color:black;">
									<span>Discount</span>
									<span>@ViewData["discount"]</span>
									<input type="hidden" id="_discount" name="_discount" value="@ViewData["discount"]" />
								</p>
								<hr>
								<p class="d-flex total-price" style="color:black;">
									<span>Total</span>
									<span>@ViewData["total"]</span>
									<input type="hidden" id="_total" name="_total" value="@ViewData["total"]" />
								</p> 

							</div>

							
							<button type="submit" class="btn btn-primary py-3 px-4" style="margin-top:30px;align-self:center;width:100%;font-size:20px;">Place an order</button>
						</form>
					</div>

				</div>

			</div> <!-- .col-md-8 -->

		</section> <!-- .section -->
	}
	else
	{
		<div class=" text-center" style="width:100%;margin-top:70px;margin-bottom:100px;">
			<form asp-action="Shop" asp-controller="Product" method="get">
				<h1 style="color:black; font-size:20px; margin-bottom:30px;">Your cart is currently empty</h1>
				<button type="submit" class="btn btn-primary py-3 px-4">Return To Shop</button>
			</form>
		</div>
	}


	<script src="~/js/jquery.min.js"></script>
	<script src="~/js/jquery-migrate-3.0.1.min.js"></script>
	<script src="~/js/popper.min.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	<script src="~/js/jquery.easing.1.3.js"></script>
	<script src="~/js/jquery.waypoints.min.js"></script>
	<script src="~/js/jquery.stellar.min.js"></script>
	<script src="~/js/owl.carousel.min.js"></script>
	<script src="~/js/jquery.magnific-popup.min.js"></script>
	<script src="~/js/aos.js"></script>
	<script src="~/js/jquery.animateNumber.min.js"></script>
	<script src="~/js/bootstrap-datepicker.js"></script>
	<script src="~/js/scrollax.min.js"></script>
	<script src="~/https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
	<script src="~/js/google-map.js"></script>
	<script src="~/js/main.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


	<script>
		$(document).ready(function () {

			var quantitiy = 0;
			$('.quantity-right-plus').click(function (e) {

				// Stop acting like a button
				e.preventDefault();
				// Get the field name
				var quantity = parseInt($('#quantity').val());

				// If is not undefined

				$('#quantity').val(quantity + 1);


				// Increment

			});

			$('.quantity-left-minus').click(function (e) {
				// Stop acting like a button
				e.preventDefault();
				// Get the field name
				var quantity = parseInt($('#quantity').val());

				// If is not undefined

				// Increment
				if (quantity > 0) {
					$('#quantity').val(quantity - 1);
				}
			});

		});
	</script>
	@section Scripts {
		@{
			await Html.RenderPartialAsync("_ValidationScriptsPartial");
		}
	}
</body>
</html>