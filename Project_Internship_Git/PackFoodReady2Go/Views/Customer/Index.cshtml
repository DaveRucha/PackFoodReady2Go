@using PackFoodReady2Go.UI.Controllers
@model PackFoodReady2Go.Core.CompositeViewModel

@{
    var WebsiteTitle = Context.Session.GetString("WebsiteTitle");
    var CompanyAddress = Context.Session.GetString("CompanyAddress");
    var CompanyContactNo = Context.Session.GetString("CompanyContactNo");
    var CompanyEmail = Context.Session.GetString("CompanyEmail");
    var DescriptionOffer = Context.Session.GetString("DescriptionOffer");
    var CompanyDescription = Context.Session.GetString("CompanyDescription");
    var FeaturedProductTitle = Context.Session.GetString("FeaturedProductTitle");
    var FeaturedProductDescription = Context.Session.GetString("FeaturedProductDescription");
    var PromoTitle = Context.Session.GetString("PromoTitle");
    var PromoTagline = Context.Session.GetString("PromoTagline");
    var PromoDescription = Context.Session.GetString("PromoDescription");
    var PromoProductname = Context.Session.GetString("PromoProductname");
    var PromoOffertag = Context.Session.GetString("PromoOffertag");
    var SliderImage = Context.Session.GetString("SliderImage");
    var SliderTitle = Context.Session.GetString("SliderTitle");
    var SliderDescription = Context.Session.GetString("SliderDescription");
    var SliderButtonTitle = Context.Session.GetString("SliderButtonTitle");
    var BannerImage = Context.Session.GetString("BannerImage");
    var BannerTitle = Context.Session.GetString("BannerTitle");
    var BannerDescription = Context.Session.GetString("BannerDescription");
    var UserId = Context.Session.GetInt32("UserId");


}
<html lang="en">
<head>
    <title>PackFoodReady2Go  </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:400,700&display=swap" rel="stylesheet">

    <link href="~/css/open-iconic-bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/animate.css">

    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">

    <link rel="stylesheet" href="~/css/aos.css">

    <link rel="stylesheet" href="~/css/ionicons.min.css">

    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/css/jquery.timepicker.css">


    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/icomoon.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>


<body class="goto-here">




    <section id="home-section" class="hero">
        <div class="home-slider owl-carousel">

            @if (Model.Slider != null)
            {

                foreach (var slider1 in Model.Slider)
                {
                    <div class="slider-item" 
                        style="background-image: url('@Url.Content("~/img/" + @slider1.SliderImage)');">
                        <div class="overlay"></div>
                        <div class="container">
                            <div class="row slider-text justify-content-center align-items-center" data-scrollax-parent="true">


                                <div class="col-md-12 ftco-animate text-center">
                                    <h1 class="mb-2">@slider1.SliderTitle</h1>
                                    <h2 class="subheading mb-4">
                                        @slider1.SliderDescription
                                    </h2>
                                    <p><a asp-action="Shop" asp-controller="Product" class="btn btn-primary">@slider1.SliderButtonTitle</a></p>

                                </div>
                            </div>
                        </div>
                    </div>
                }


            }
        </div>
    </section>

    <section class="ftco-section">
        <div class="container">
            <div class="row no-gutters ftco-services">

            @if (Model.Banner != null)
            {

                foreach (var banner in Model.Banner)
                {


                        <div class="col-md-3 text-center d-flex align-self-stretch ftco-animate">
                            <div class="media block-6 services mb-md-0 mb-4">
                                <div class="icon bg-color-1 active d-flex justify-content-center align-items-center mb-2">
                                    <img src="~/img/@banner.BannerImage" style="height:115px" />

                                </div>

                                <div class="media-body">
                                    <h3 class="heading">@banner.BannerTitle</h3>
                                    <!-- dynamic -->
                                    <span>@banner.BannerDescription</span>
                                </div>
                            </div>
                        </div>
                    }
                }

                    </div>
               
        </div>
    </section>

    <section class="ftco-section ftco-category ftco-no-pt">

        <div class="container">
            @if (Model.CategoryList != null)
            {
                <div class="row">
                    @foreach (var catlist in Model.CategoryList)
                    {
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6 order-md-last align-items-stretch d-flex">
                                    <div class="category-wrap-2 ftco-animate img align-self-stretch d-flex" style="background-image: url('@Url.Content("~/img/" + @catlist.CategoryListImage)');">
                                        <div class="text text-center">
                                            <h2 style="margin:15px">@catlist.CategoryListTitle</h2>
                                            <p>@catlist.CategoryListDescripton</p>
                                            <p><a asp-action="Shop" asp-controller="Product" class="btn btn-primary">@catlist.CategoryListButtonTitle</a></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="category-wrap ftco-animate img mb-4 d-flex align-items-end" style="background-image: url('@Url.Content("~/img/" + @catlist.CategoryListImage2)');">
                                        <div class="text px-3 py-1">
                                            <h2 class="mb-0"><a href="#">@catlist.CategoryListTitle2</a></h2>
                                        </div>
                                    </div>
                                    <div class="category-wrap ftco-animate img d-flex align-items-end" style="background-image: url('@Url.Content("~/img/" + @catlist.CategoryListImage3)');">
                                        
                                        <div class="text px-3 py-1">
                                            <h2 class="mb-0"><a href="#">@catlist.CategoryListTitle3</a></h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="category-wrap ftco-animate img mb-4 d-flex align-items-end" style="background-image: url('@Url.Content("~/img/" + @catlist.CategoryListImage4)');">
                                <div class="text px-3 py-1">
                                    <h2 class="mb-0"><a href="#">@catlist.CategoryListTitle4</a></h2>
                                </div>
                            </div>
                            <div class="category-wrap ftco-animate img d-flex align-items-end" style="background-image: url('@Url.Content("~/img/" + @catlist.CategoryListImage5)');">
                                <div class="text px-3 py-1">
                                    <h2 class="mb-0"><a href="#">@catlist.CategoryListTitle5</a></h2>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

    </section>


    <section class="ftco">
        <div class="container">
            <div class="row justify-content-center mb-3 pb-3">
                <div class="col-md-12 heading-section text-center ftco-animate">
                    <span class="subheading" style="font-size:30px">@Model.MasterHomePage.FirstOrDefault().FeaturedProductTitle</span>
                    <p>@Model.MasterHomePage.FirstOrDefault().FeaturedProductDescription</p>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-6 col-lg-3 ftco-animate">
                        <div class="product" style="height:369px;width:auto">
                            <a href="#" class="img-prod">
                                <img class="img-fluid" src="~/img/@product.ImageURL" alt="@product.ProductName">

                            </a>
                            <div class="text py-3 pb-4 px-3 text-center">
                                <h3><a href="#">@product.ProductName</a></h3>
                                <div class="d-flex">
                                    <div class="pricing">
                                        <p class="price"><span class="mr-2 price-dc">@product.Discount</span><span class="price-sale">@product.UnitPrice</span></p>
                                    </div>
                                </div>
                                <div class="bottom-area d-flex px-3">
                                    <div class="m-auto d-flex">

                                        <a href="/Product/ProductView?Product_id=@product.ProductID&CategoryID=@product.CategoryID" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                            <span><i class="ion-ios-menu"></i></span>
                                        </a>
                                        @if (UserId.HasValue)
                                        {
                                            <a href="/Product/AddInCart?Customer_id=@UserId&Product_id=@product.ProductID&Quantity=1" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                                <span><i class="ion-ios-cart"></i></span>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Login" asp-area="" asp-controller="Customer" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                                <span><i class="ion-ios-cart"></i></span>
                                            </a>
                                        }
                                        @if (UserId.HasValue)
                                        {
                                            <a href="/Product/AddInWishlist?Customer_id=@UserId&Product_id=@product.ProductID" class="heart d-flex justify-content-center align-items-center ">
                                                <span><i class="ion-ios-heart"></i></span>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Login" asp-area="" asp-controller="Customer" class="heart d-flex justify-content-center align-items-center ">
                                                <span><i class="ion-ios-heart"></i></span>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>



    <section class="ftco-section img mt-3" style="background-image: url('@Url.Content("~/img/" + Model.MasterHomePage.FirstOrDefault()?.PromoImage)');">

        <div class="container">
            <div class="row justify-content-end " style="margin-left:44%">
                <div class="col-md-6 heading-section ftco-animate deal-of-the-day ftco-animate">
                    <span class="subheading" style="font-size:35px;color:beige;font-weight:500">@Model.MasterHomePage.FirstOrDefault().PromoTitle</span>
                    <h2 class="mb-4" style="font-weight:600;font-size:larger">@Model.MasterHomePage.FirstOrDefault().PromoTagline</h2>
                    <p style="color:beige;font-weight:600">@Model.MasterHomePage.FirstOrDefault().PromoDescription</p>
                    <h3><a href="#" style="color:black;font-weight:bolder">@Model.MasterHomePage.FirstOrDefault().PromoProductname</a></h3>
                    <span class="price"><a href="#" style="color:darkgreen;font-weight:bold">@Model.MasterHomePage.FirstOrDefault().PromoOffertag</a></span>
                </div>
            </div>
        </div>
    </section>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.stellar.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/jquery.animateNumber.min.js"></script>
    <script src="~/js/bootstrap-datepicker.js"></script>
    <script src="~/js/scrollax.min.js"></script>
    <script src="~/https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="~/js/google-map.js"></script>
    <script src="~/js/main.js"></script>

</body>
</html>



